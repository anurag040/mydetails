.arrow-button {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 50px; /* Width of the button */
  height: 50px; /* Height of the button */
  border: none;
  border-radius: 50%; /* Makes it circular */
  background-color: #007BFF; /* Button background color */
  cursor: pointer;
  transition: transform 0.3s ease, background-color 0.3s ease;
}

.arrow-button:hover {
  background-color: #0056b3; /* Darker color on hover */
  transform: scale(1.1); /* Slight scaling effect */
}

.arrow-icon {
  position: relative;
  width: 15px; /* Arrow width */
  height: 15px; /* Arrow height */
  border: solid #fff; /* Arrow color */
  border-width: 2px 2px 0 0; /* Make it look like an arrow */
  transform: rotate(45deg); /* Rotate to make an arrowhead */
}

.arrow-icon.backward {
  transform: rotate(-135deg); /* Rotate for backward arrow */
}

.arrow-icon.forward {
  transform: rotate(45deg); /* Rotate for forward arrow */
}


<button mat-button class="arrow-button">
  <span class="arrow-icon forward"></span>
</button>

<button mat-button class="arrow-button">
  <span class="arrow-icon backward"></span>
</button>
