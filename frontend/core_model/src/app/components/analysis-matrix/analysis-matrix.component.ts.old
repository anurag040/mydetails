  getAnalysisSummary(record: AnalysisRecord): string[] {
    const details = this.getAnalysisDetails(record.analysis_type);
    return [
      `Applied ${details.description.toLowerCase()}`,
      `Key metrics: ${details.metrics.slice(0, 2).join(', ')}`,
