import { Component } from '@angular/core';
import { MatDialogRef } from '@angular/material/dialog';

@Component({
  selector: 'app-eliza-modal',
  standalone: true,
  imports: [],
  templateUrl: './eliza-modal.component.html',
  styleUrl: './eliza-modal.component.scss'
})
export class ElizaModalComponent {

  constructor(public dialogRef: MatDialogRef<ElizaModalComponent>) {}

  close(): void {
    this.dialogRef.close();
  }

  accept(): void {
    console.log('Accepted');
    this.dialogRef.close(); // or add any accept logic here
  }

  adjust(): void {
    console.log('Adjusted');
    this.dialogRef.close(); // or add any adjust logic here
  }

}
